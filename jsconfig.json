{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "ignoreDeprecations": "6.0",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ]
}